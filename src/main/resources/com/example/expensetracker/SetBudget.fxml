<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.expensetracker.SetBudget">
   <children>
      <Label layoutX="87.0" layoutY="123.0" text="Current Monthly Budget:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label fx:id="currentBudget" layoutX="264.0" layoutY="122.0" prefHeight="26.0" prefWidth="142.0" text="\$$$$$$$$$$$$$$$">
         <font>
            <Font name="System Bold Italic" size="16.0" />
         </font>
      </Label>
      <Button layoutX="407.0" layoutY="120.0" mnemonicParsing="false" onAction="#showCurrentBudgetButton" text="Show">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label layoutX="208.0" layoutY="37.0" text="Monthly Budget">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button layoutX="232.0" layoutY="212.0" mnemonicParsing="false" onAction="#onSetBudgetButton" text="Set/Reset Budget">
